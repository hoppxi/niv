(include "./src/widgets/bar/modules/left.yuck")
(include "./src/widgets/bar/modules/center.yuck")
(include "./src/widgets/bar/modules/right.yuck")

(defwidget main-bar []
  (centerbox
    :class "main-bar"
    :valign "center"
    (left-bar)
    (center-bar)
    (right-bar)
  )
)

(defwindow bar
  :monitor 0
  :geometry (geometry 
    :x "0"
    :y "0"
    :width "100%"
    :height "28px"
    :anchor "top center"
  )
  :stacking "fg"
  :exclusive true
  :namespace "widget-bar"
  (main-bar)
)

